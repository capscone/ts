<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_logo_product"
        android:layout_width="@dimen/product_image_size"
        android:layout_height="@dimen/product_image_size"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/logo"

        />

    <TextView
        android:id="@+id/txt_name_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/img_logo_product"
        android:layout_alignParentTop="true"
        android:text="aasaf"
        android:layout_marginStart="10dp"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txt_price_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_logo_product"
        android:layout_below="@id/txt_name_product"
        android:text="900.000d"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:textSize="18sp" />
</RelativeLayout>
