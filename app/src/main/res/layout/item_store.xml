<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <ImageView
        android:id="@+id/img_logo_store"
        android:layout_width="@dimen/store_logo_size"
        android:layout_height="@dimen/store_logo_size"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/logo"

        />

    <TextView
        android:id="@+id/txt_name_store"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_logo_store"
        android:layout_alignParentTop="true"
        android:text="Namaaaaaaaaaaaaaaaasdfasdfasdfasdfasdfasdfasdfe"
        android:layout_marginStart="10dp"
        android:textSize="18sp" />
</RelativeLayout>
